@model AgênciaVivaViagemWeb.Models.Promocao

@{
    ViewData["Title"] = "Deletar";
}
<link rel="stylesheet" href="~/css/style2.css" />

<h1>Delete</h1>

<h3>Tem certeza de que quer deletar este dado?</h3>
<div>
    <h4>Promoção</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdDestino)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdDestino)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Desconto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Desconto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>

    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" data-toggle="modal" data-target="#ModalCentralizado"  /> |
        <a asp-action="Index">Voltar a lista</a>
    </form>
</div>

<div class="modal fade" id="ModalCentralizado" tabindex="-1" role="dialog" aria-labelledby="TituloModalCentralizado" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="TituloModalCentralizado">Viva Viagens</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
               Promoção deletada com sucesso!
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>